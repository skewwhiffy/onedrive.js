{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "mocha"
  ],
  "rules": {
    "arrow-parens": "off",
    "class-methods-use-this": "off",
    "comma-dangle": "off",
    "import/order": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["**/*.test.js", "server/test.utils/*.js"]
    }],
    "lines-around-directive": "off",
    "no-console": "error",
    "mocha/no-exclusive-tests": "error",
    "strict": "off"
  }
}
